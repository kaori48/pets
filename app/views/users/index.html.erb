<%= render 'layouts/side', user: current_user %><!--ヘッダー-->
<div>
 <div>
	<table>
		<thead>
           <tr>
           	 	<th>image</th>
           	 	<th>name</th>
           </tr>
		</thead>
		<tbody><!--全ユーザー一覧-->
			<% @users.each do |user|%>
			<tr>
				<td><!--tdのそとにリンク書けないので中-->
					<%= link_to user_path(user.id) do %>
					    <%= attachment_image_tag user, :icon, size: "40x40", fallback: "no_image.jpg" %>
                    <% end %>
                </td>
				<td>
					<%= link_to user_path(user.id) do %>
					    <%= user.name %>
					<% end %>
				</td><!--name --><!--showボタンで(そのidの投稿一覧 -->
			</tr>
			<% end %>
		</tbody>
	</table>
  </div>
 </div>
