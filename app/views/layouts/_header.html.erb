<header class="navbar">
  <div class="container">
    <%if user_signed_in? %><!-- ログインしているか -->
     <div class="row">
        <div class="col-xs-4 col-xs-offset-5">
           <h1><%= link_to"Logo", blogs_path %></h1><!-- ログインした人のトップはblogのindex-->
        </div>
    </div>
    <nav class="navbar">
      <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
      <ul class="nav navbar-nav">
        <li><%= link_to"マイページ", edit_user_path(current_user.id) %></li>
        <li><%= link_to"ブログ", blogs_path %></li>

        <li><%= link_to"ログアウト", destroy_user_session_path, :method => :delete %></li>
      </ul>
      </div>
      </div>
    </nav>
    <div class="search-form">
        <%= form_tag(search_path, method: "get") do %>
        <%= text_field_tag :search %><!--カラム指定？２つある-->
        <%= select_tag(:option, options_for_select([["User","1"],["Blog","2"]])) %>
        <%= submit_tag "検索" %><!--検索結果表示リンク-->
        <% end %>
    </div>

        <% else %>
        <%= link_to"Logo", root_path %>
        <%= link_to root_path do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
        <% end %>
        <%= link_to home_about_path do %>
        <span class="glyphicon glyphicon-link" aria-hidden="true">このサイトについて</span>
        <% end %>
        <%= link_to new_user_registration_path do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true">新規登録</span>
        <% end %>
        <%= link_to new_user_session_path do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true">ログイン</span>
        <% end %>
        <% end %>
      </div>
    </header>