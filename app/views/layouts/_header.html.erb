<header class="navbar">
  <div class="container">
    <%if user_signed_in? %><!-- ログインしているか -->
      <div class="row">
          <div class="col-xs-4 col-xs-offset-5">
             <h1><%= link_to"Logo", blogs_path %></h1><!-- ログインした人のトップはblogのindex-->
          </div>
      </div>
      <nav class="navbar">
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <ul class="nav navbar-nav">
            <li><%= link_to"マイページ", edit_user_path(current_user.id) %></li>
            <li><%= link_to"ブログ", blogs_path %></li>
            <li><%= link_to"アバウト", home_about_path %></li>
            <li><%= link_to"ログアウト", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </div>
      </div>
      </nav>

       <div class="search-form">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-8">
              <%= form_tag(search_path, method: "get") do %>
                <%= text_field_tag :search %><!--カラム指定？２つある-->
                <%= select_tag(:option, options_for_select([["User","1"],["Blog","2"]])) %>
                <%= submit_tag "検索" %><!--検索結果表示リンク-->
              <% end %>
            </div>
          </div>
        </div>

    <% else %>
        <div class="row">
          <div class="col-xs-4 col-xs-offset-5">
             <h1><%= link_to"Logo", root_path %></h1>
          </div>
        </div>
        <nav class="navbar">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
          <ul class="nav navbar-nav">
            <li><%= link_to"アバウト", home_about_path %></li>
            <li><%= link_to"ログイン", new_user_session_path %></li>
            <li><%= link_to"新規登録", new_user_registration_path %></li>
          </ul>
        </div>
    <% end %>
  </div>
</header>