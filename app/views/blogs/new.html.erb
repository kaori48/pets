<%= form_for(@blog) do |f| %>
    <%= attachment_image_tag @user, :icon, size: "710x520", fallback: "no_image.jpg" %><br>
	 <%= f.attachment_field :blog_image %><!-- blog_image_idだがrefileの仕様でidなし --><!-- サイズについての表記を書く -->
	 <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit "投稿" %>
<% end %>

