<!--部分テンプレート-->
<!--ペット一覧のユーザー-->
<%= render 'layouts/side', user: current_user, applying: @applying %>
<!--ジャンル一覧-->
<%= render 'layouts/sidegenre', genres: @genres %><br>

<!--ブログ新規投稿-->
<%= form_for(@blog) do |f| %>
    <%= render 'layouts/error', model: f.object %>
    <%= attachment_image_tag @blog, :blog_image, size: "710x520", fallback: "no_image.jpg" %><br>
	 <%= f.attachment_field :blog_image %><!-- blog_image_idだがrefileの仕様でidなし --><!-- サイズについての表記を書く -->
    <p>＊印は必ず入力してください</p>
	 <h4>タイトル＊</h4>
    <%= f.text_field :title,placeholder: "タイトルを入力してください" %>
    <h4>本文＊</h4>
    <%= f.text_area :body,placeholder: "本文を入力してください" %>
    <h4>ジャンル選択</h4>
        <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |genre| %>
          <%= genre.label {genre.check_box + genre.text } %>
        <% end %>
    <%= f.submit "投稿" %>
<% end %>

