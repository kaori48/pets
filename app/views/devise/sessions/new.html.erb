<div class="row">
  <div class="login col-xs-4 col-xs-offset-4">
  <h3>ログイン</h3><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <p class="text-center"><%= f.email_field :email,:size=>"40x1", autofocus: true, autocomplete: "email" %></p>
  </div><br>

  <div class="field">
    <%= f.label :password %><br/>
    <p class="text-center"><%= f.password_field :password,:size=>"40x1", autocomplete: "current-password" %></p>
  </div><br>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div><br>
  <% end %>

  <div class="actions">
    <p class="text-center"><%= f.submit "ログイン",class: "btn btn-warning" %></p>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>